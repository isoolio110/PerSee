<div class="container-fluid party-pg">

  <div class="row">
    <div class="col-xs-12 parties-nav-bar 
    nav-bar">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/foods">Foods</a></li>
        <li><a href="/parties/new">Add Party</a></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5 ">
      <div class="parties-boxed-title">
        <h2>Parties</h2>
      </div>
    </div>  
  </div>

  <div class="row parties-list">
    <% @parties.each do |party| %>
      <div class="col-xs-6 col-sm-4 col-md-3">
        <div class="party">
          <p><a href="/parties/<%= party.id%>">
            Table Number: <%= party.table_no %> </a></p>
          <p>Name: <%= party.name %></p>  
          <p>Party Size: <%= party.size %></p> 
        </div>
      </div>
    <% end %>
  </div>

</div>
